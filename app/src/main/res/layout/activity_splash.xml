<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorCloud"
    android:orientation="vertical"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128dp"
        android:layout_marginTop="@dimen/dimen_96dp"
        android:adjustViewBounds="true"
        android:src="@drawable/resfeber_logo" />

    <com.travel.resfeber.custom.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_4dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp36"
        app:ftype="bold" />


</LinearLayout>