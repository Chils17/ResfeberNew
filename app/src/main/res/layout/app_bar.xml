<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:theme="@style/AppTheme.AppBarOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="horizontal">

        <com.travel.resfeber.custom.TfTextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            app:ftype="semibold" />

        <RelativeLayout
            android:id="@+id/relativeRightHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_6dp"
            android:visibility="gone">

            <com.travel.resfeber.custom.TfTextView
                android:id="@+id/txtRightHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dimen_6dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                app:ftype="semibold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cartRentRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_6dp"
            android:visibility="gone">

            <!--<ImageView
                android:id="@+id/cartRentButtonIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:padding="@dimen/dimen_6dp"
                android:src="@drawable/ic_rent"
                android:tint="@color/white" />-->
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/ic_edit"
            android:visibility="gone" />


    </LinearLayout>

</android.support.v7.widget.Toolbar>
